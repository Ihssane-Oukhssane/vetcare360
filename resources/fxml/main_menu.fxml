<BorderPane fx:id="mainBorderPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MainMenuController"
            stylesheets="@/style/style.css">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="navbar"

        style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Button text="Accueil" onAction="#loadAccueil" />
            <Button text="Vétérinaires" onAction="#loadVeterinaires"  />
            <Button text="Propriétaires" onAction="#loadProprietaires"/>
            <Button text="Animaux" onAction="#loadAnimaux" />
            <Button text="Visites" onAction="#loadVisites" />


        </HBox>
    </top>

    <center>
        <AnchorPane fx:id="contentPane" BorderPane.alignment="CENTER"
                    prefWidth="1000" prefHeight="600"
                    style="-fx-background-color: transparent;">
        </AnchorPane>

    </center>
</BorderPane>
